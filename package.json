{
  "name": "slacord",
  "version": "1.0.0",
  "description": "Slack to Discord message relay monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "yarn workspace @slacord/nestjs start:dev",
    "dev:web": "yarn workspace @slacord/nextjs dev",
    "build:server": "yarn workspace @slacord/nestjs build",
    "build:web": "yarn workspace @slacord/nextjs build",
    "start:server": "yarn workspace @slacord/nestjs start:prod",
    "start:web": "yarn workspace @slacord/nextjs start",
    "lint": "yarn workspaces run lint",
    "clean": "yarn workspaces run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
